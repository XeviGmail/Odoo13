<odoo>
    <record id="view_exercise_line_form" model="ir.ui.view">
        <field name="name">exercise.line</field>
        <field name="model">exercise.line</field>
        <field name="arch" type="xml">
            <form string="Exercise Line">
                <sheet>
                    <group>
                        <field name="health_record_id"/>
                        <field name="exercise_id"/>
                        <field name="hours" widget="float_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_exercise_line_tree" model="ir.ui.view">
        <field name="name">exercise.line.tree</field>
        <field name="model">exercise.line</field>
        <field name="arch" type="xml">
            <tree string="Exercise Line">
                <field name="health_record_id"/>
                <field name="exercise_id"/>
                <field name="hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="action_exercise_line" model="ir.actions.act_window">
        <field name="name">Exercise Line</field>
        <field name="res_model">exercise.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_exercise_line" name="Exercise Line" parent="menu_health_tracker" action="action_exercise_line"/>

</odoo>
