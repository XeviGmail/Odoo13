<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--
        A単adimos nuestros documentos a los bundles (paquetes) que queramos.
        Los bundles que ahora utilizaremos seran los de Frontend y los de Backend
        Podriamos a単adir Javasctript, CSS, SCSS...
    -->

    <!-- Frontend -->
    <!-- A単adimos al final del Bundle de Frontend el archivo button.js -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//script[last()]" position="after">
            <script src="/Learning_FrontBackend/static/src/js/button.js"/>

        </xpath>
    </template>

    <!-- Backend -->
    <!-- A単adimos al final del Bundle de Backend el archivo field.js -->
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="//script[last()]" position="after">
            <script src="/Learning_FrontBackend/static/src/js/field.js"/>
            <script src="/Learning_FrontBackend/static/src/js/followers.js"/>
        </xpath>
    </template>

</odoo>